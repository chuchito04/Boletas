---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import { senadores } from "@/data/candidatos-senadores.json";
import { diputadosfederales } from "@/data/candidatos-diputados-federales.json";
import { diputadoslocales } from "@/data/candidatos-diputados-locales.json";
import { presidentes } from "@/data/candidatos-presidencia.json";
import {gobernadores} from "@/data/candidatos-gobernador.json";
import { presidentemunicipal } from "@/data/candidatosayuntamientos_v2.json";


const personaMunicipio = Astro.cookies.get('municipio').value;
const personaDF = Astro.cookies.get('distrito_f').value;
const personaDL = Astro.cookies.get('distrito_l').value;


---

<Layout title="Candidatos">
  <Header />
  <div class="bg-[#dcdcdc]">
    <div class="pt-24 fuente2 text-center text-lg"></div>
    <div
      class="left-[1vw] w-[98vw] md:w-[80vw] md:left-[10vw] h-screen justify-center rounded-xl hidden"
      id="map"
    >
    </div>
    <div class="flex flex-col items-center justify-center">
      <div
        class="flex flex-col items-center justify-center w-[90vw] p-4 md:w-[80vw] mt-2 mb-10 text-xl font-bold"
      >
      <div class="mt-3 mb-3">PRESIDENTE</div>
      <div class="grid md:grid-cols-1 gap-4">
        {
          presidentes
            .filter(
              (candidato) =>
                candidato.nombreAsociacion ===
                  "FUERZA Y CORAZON POR MEXICO",
            )
            .map((candidato) => (
              <div class="flex flex-col p-4 bg-white items-center justify-center w-full border-[0.8px] rounded-xl shadow-lg hover:scale-105 transition-all ease-in-out duration-200 cursor-pointer">
                <img
                  src={candidato.urlFoto}
                  alt=""
                  class="w-40 h-40 rounded-full mt-5"
                />
                <h2 class="text-xl font-bold mt-5 text-center">
                  {candidato.nombreCandidato}
                </h2>
                <p class="text-center text-sm text-red-600">
                  {candidato.nombreAsociacion}
                </p>
                <a
                  class="bg-gray-800 text-white text-xs p-2 hover:bg-red-600 rounded-lg mt-2"
                  href={`https://candidaturas.ine.mx/detalleCandidato/${candidato.idCandidato}/1`}
                  target="_blank" 
                >
                  Ver Más
                </a>
              </div>
            ))
        }
      </div>
      <div class="mt-3 mb-3">GOBERNADOR</div>
          <div class="grid md:grid-cols-1 gap-4">
            {
              gobernadores
                .filter(
                  (candidato) =>
                    candidato.Propietario.Estado === "Yucatán" &&
                    candidato.Propietario.Partido.includes("PRI"),
                )
                .map((candidato) => (
                  <div class="flex flex-col p-4 bg-white items-center justify-center w-full border-[0.8px] rounded-xl shadow-lg hover:scale-105 transition-all ease-in-out duration-200 cursor-pointer">
                    <img
                      src={candidato.Propietario.fotografía}
                      alt=""
                      class="w-40 h-40 rounded-full mt-5 object-cover"
                    />
                    <h2 class="text-xl font-bold mt-5 text-center">
                      {candidato.Propietario.Propietario}
                    </h2>
                    <p class="text-center text-sm text-red-600">
                      {candidato.Propietario.Partido}
                    </p>
                    <a
                      class="bg-gray-800 text-white text-xs p-2 hover:bg-red-600 rounded-lg mt-2"
                      href={`https://conoceles.iepac.mx/es/busqueda/Diputaciones/?candidato=${candidato.Uid}`}
                      target="_blank" 
                    >
                      Ver Más
                    </a>
                  </div>
                ))
            }
          </div>
          <div class="mt-3 mb-3">PRESIDENTE MUNICIPAL</div>
          <div class="grid md:grid-cols-1 gap-4">
            {
              presidentemunicipal
                .filter(
                  (candidato) =>
                    candidato.Estado === "Yucatán" &&
                    candidato.cve_mun === parseInt(personaMunicipio) &&
                    candidato.partido.includes("PRI"),
                )
                .map((candidato) => (
                  <div class="flex flex-col p-4 bg-white items-center justify-center w-full border-[0.8px] rounded-xl shadow-lg hover:scale-105 transition-all ease-in-out duration-200 cursor-pointer">
                    <img
                      src={candidato.fotografía}
                      alt=""
                      class="w-40 h-40 rounded-full mt-5 object-cover"
                    />
                    <h2 class="text-xl font-bold mt-5 text-center">
                      {candidato.Propietario}
                    </h2>
                    <p class="text-center text-sm text-red-600">
                      {candidato.partido}
                    </p>
                    <a
                      class="bg-gray-800 text-white text-xs p-2 hover:bg-red-600 rounded-lg mt-2"
                      href={`https://conoceles.iepac.mx/es/busqueda/Diputaciones/?candidato=${candidato.Uid}`}
                      target="_blank" 
                    >
                      Ver Más
                    </a>
                  </div>
                ))
            }
          </div>
        <div class="mt-3 mb-3">SENADORES</div>
        <div class="flex flex-col items-center justify-center">
          
          <div class="grid md:grid-cols-2 xl:grid-cols-2 gap-4">
            {
              senadores
                .filter(
                  (candidato) =>
                    candidato.nombreEstado === "YUCATAN" &&
                    candidato.tipoCandidato === "P" &&
                    candidato.nombreAsociacion ===
                      "FUERZA Y CORAZON POR MEXICO",
                )
                .map((candidato) => (
                  <div class="flex flex-col p-4 bg-white items-center justify-center w-full border-[0.8px] rounded-xl shadow-lg hover:scale-105 transition-all ease-in-out duration-200 cursor-pointer">
                    <img
                      src={candidato.urlFoto}
                      alt=""
                      class="w-40 h-40 rounded-full mt-5"
                    />
                    <h2 class="text-xl font-bold mt-5 text-center">
                      {candidato.nombreCandidato}
                    </h2>
                    <p class="text-center text-sm text-red-600">
                      {candidato.nombreAsociacion}
                    </p>
                    <a
                      class="bg-gray-800 text-white text-xs p-2 hover:bg-red-600 rounded-lg mt-2"
                      href={`https://candidaturas.ine.mx/detalleCandidato/${candidato.idCandidato}/2`}
                      target="_blank" 
                    >
                      Ver Más
                    </a>
                  </div>
                ))
            }
          </div>
          <div class="mt-3 mb-3">DIPUTADOS FEDERALES</div>
          <div class="grid md:grid-cols-1 gap-4">
            {
              diputadosfederales
                .filter(
                  (candidato) =>
                    candidato.nombreEstado === "YUCATAN" &&
                    candidato.nombreAsociacion ===
                      "FUERZA Y CORAZON POR MEXICO" &&
                    candidato.idDistritoEleccion === parseInt(personaDF) &&
                    candidato.tipoCandidato === "P",
                )
                .map((candidato) => (
                  <div class="flex flex-col p-4 bg-white items-center justify-center w-full border-[0.8px] rounded-xl shadow-lg hover:scale-105 transition-all ease-in-out duration-200 cursor-pointer">
                    <img
                      src={candidato.urlFoto}
                      alt=""
                      class="w-40 h-40 rounded-full mt-5"
                    />
                    <h2 class="text-xl font-bold mt-5 text-center">
                      {candidato.nombreCandidato}
                    </h2>
                    <p class="text-center text-sm text-red-600">
                      {candidato.nombreAsociacion}
                    </p>
                    <a
                      class="bg-gray-800 text-white text-xs p-2 hover:bg-red-600 rounded-lg mt-2"
                      href={`https://candidaturas.ine.mx/detalleCandidato/${candidato.idCandidato}/4`}
                      target="_blank" 
                    >
                      Ver Más
                    </a>
                  </div>
                ))
            }
          </div>
          <div class="mt-3 mb-3">DIPUTADOS LOCALES</div>
          <div class="grid md:grid-cols-1 gap-4">
            {
              diputadoslocales
                .filter(
                  (candidato) =>
                    candidato.Propietario.Estado === "Yucatán" &&
                    candidato.Propietario.Partido.includes("PRI") &&
                    candidato.Propietario.Distrito.startsWith(personaDL + ":")
                )
                .map((candidato) => (
                  <div class="flex flex-col p-4 bg-white items-center justify-center w-full border-[0.8px] rounded-xl shadow-lg hover:scale-105 transition-all ease-in-out duration-200 cursor-pointer">
                    <img
                      src={candidato.Propietario.fotografía}
                      alt=""
                      class="w-40 h-40 rounded-full mt-5 object-cover"
                    />
                    <h2 class="text-xl font-bold mt-5 text-center">
                      {candidato.Propietario.Propietario}
                    </h2>
                    <p class="text-center text-sm text-red-600">
                      {candidato.Propietario.Partido}
                    </p>
                    <a
                      class="bg-gray-800 text-white text-xs p-2 hover:bg-red-600 rounded-lg mt-2"
                      href={`https://conoceles.iepac.mx/es/busqueda/Diputaciones/?candidato=${candidato.Uid}`}
                      target="_blank" 
                    >
                      Ver Más
                    </a>
                  </div>
                ))
            }
          </div>
        </div>
      </div>
    </div>
  </div></Layout
>
